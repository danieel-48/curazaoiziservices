---
import {getI18N} from "@/i18n/index"

const { currentLocale} = Astro;
const i18n = getI18N({currentLocale})
---

<!-- start section -->
        <section class="bg-very-light-gray big-section" id="down-section">
            <div class="container">
                <div class="row align-items-center justify-content-center text-center text-lg-start" data-anime='{ "el": "childs", "translateX": [50, 0], "opacity": [0,1], "duration": 600, "delay": 0, "staggervalue": 100, "easing": "easeOutQuad" }'>
                    <div class="col-lg-5 col-md-10 md-mb-50px xs-mb-40px">
                        <h2 class="fw-600 text-dark-gray ls-minus-2px mb-0">{(i18n.DiscoverHome.Discover_Title)}</h2>
                    </div>
                    <div class="col-xl-2 offset-xl-2 offset-lg-1 col-md-3 col-sm-4 text-center xs-mb-20px">
                        <span class="fw-600 text-dark-gray fw-600 fs-60 ls-minus-2px">7890<span class="bg-base-color left-0px w-50 h-10px bottom-10px"></span></span>
                    </div>
                    <div class="col-lg-3 col-md-5 col-sm-6 last-paragraph-no-margin text-center text-sm-start">
                        <span class="text-dark-gray fs-20 fw-600 d-inline-block mb-5px">{(i18n.DiscoverHome.Discover_Procedures.Discover_Completed_Procedures)}</span>
                        <p class="w-90 lg-w-100">{(i18n.DiscoverHome.Discover_Procedures.Discover_Description_Procedures)}</p>
                    </div>
                </div>
                <div class="row row-cols-1 row-cols-lg-4 row-cols-sm-2 mt-7 md-mt-50px" data-anime='{ "el": "childs", "translateX": [-50, 0], "opacity": [0,1], "duration": 600, "delay": 0, "staggervalue": 100, "easing": "easeOutQuad" }'>
                    <!-- start process step item -->
                    <div class="col text-center process-step-style-02 hover-box last-paragraph-no-margin md-mb-50px">
                        <img  src="/images/home/IconosCarruselHome_Artboard4.png" width="60px"></img>
                        <span class="d-block alt-font text-dark-gray mb-5px fs-20 fw-600">{(i18n.DiscoverHome.One_Step_Item.Step_Item_Title)}</span>
                        <p class="d-inline-block w-75 lg-w-85">{(i18n.DiscoverHome.One_Step_Item.Step_Item_Text)}</p>
                        <div class="process-step-icon-box position-relative mt-30px">
                            <span class="progress-step-separator bg-dark-gray opacity-1 w-55 separator-line-1px"></span>
                            <div class="process-step-icon d-flex justify-content-center align-items-center mx-auto bg-white h-80px w-80px fs-18 rounded-circle text-dark-gray box-shadow-double-large alt-font fw-500">
                                <span class="number position-relative z-index-1 fw-600">01</span>
                                <div class="box-overlay bg-white rounded-circle"></div>
                            </div>
                        </div>
                    </div>
                    <!-- end process step item -->
                    <!-- start process step item -->
                    <div class="col text-center process-step-style-02 hover-box last-paragraph-no-margin md-mb-50px">
                        <img  src="/images/home/IconosCarruselHome_Artboard5.png" width="60px"></img>
                        <span class="d-block alt-font text-dark-gray mb-5px fs-20 fw-600">{(i18n.DiscoverHome.Second_Step_Item.Step_Item_Title)}</span>
                        <p class="d-inline-block w-75 lg-w-85">{(i18n.DiscoverHome.Second_Step_Item.Step_Item_Text)}</p>
                        <div class="process-step-icon-box position-relative mt-30px">
                            <span class="progress-step-separator bg-dark-gray opacity-1 w-55 separator-line-1px"></span>
                            <div class="process-step-icon d-flex justify-content-center align-items-center mx-auto bg-white h-80px w-80px fs-18 rounded-circle text-dark-gray box-shadow-double-large alt-font fw-500">
                                <span class="number position-relative z-index-1 fw-600">02</span>
                                <div class="box-overlay bg-white rounded-circle"></div>
                            </div>
                        </div>
                    </div>
                    <!-- end process step item -->
                    <!-- start process step item -->
                    <div class="col text-center process-step-style-02 hover-box last-paragraph-no-margin xs-mb-50px">
                        <img  src="/images/home/IconosCarruselHome_Artboard6.png" width="60px"></img>
                        <span class="d-block alt-font text-dark-gray mb-5px fs-20 fw-600">{(i18n.DiscoverHome.Third_Step_Item.Step_Item_Title)}</span>
                        <p class="d-inline-block w-75 lg-w-85">{(i18n.DiscoverHome.Third_Step_Item.Step_Item_Text)}</p>
                        <div class="process-step-icon-box position-relative mt-30px">
                            <span class="progress-step-separator bg-dark-gray opacity-1 w-55 separator-line-1px"></span>
                            <div class="process-step-icon d-flex justify-content-center align-items-center mx-auto bg-white h-80px w-80px fs-18 rounded-circle text-dark-gray box-shadow-double-large alt-font fw-500">
                                <span class="number position-relative z-index-1 fw-600">03</span>
                                <div class="box-overlay bg-white rounded-circle"></div>
                            </div>
                        </div>
                    </div>
                    <!-- end process step item -->
                    <!-- start process step item -->
                    <div class="col text-center process-step-style-02 hover-box last-paragraph-no-margin">
                        <i class="line-icon-Juice text-base-color icon-double-large mb-20px"></i>                            
                        <span class="d-block alt-font text-dark-gray mb-5px fs-20 fw-600">{(i18n.DiscoverHome.Fourth_Step_Item.Step_Item_Title)}</span>
                        <p class="d-inline-block w-75 lg-w-85">{(i18n.DiscoverHome.Fourth_Step_Item.Step_Item_Text)}</p>
                        <div class="process-step-icon-box position-relative mt-30px">
                            <div class="process-step-icon d-flex justify-content-center align-items-center mx-auto bg-white h-80px w-80px fs-18 rounded-circle text-dark-gray box-shadow-double-large alt-font fw-500">
                                <span class="number position-relative z-index-1 fw-600">04</span>
                                <div class="box-overlay bg-white rounded-circle"></div>
                            </div>
                        </div>
                    </div>
                    <!-- end process step item -->
                </div>
            </div>
        </section>
        <!-- end section -->
const { getRelativeLocaleUrl, t, currentLocale } = Astro.props;
---    
    
    <!-- start footer -->
    <footer class="footer-light bg-black"> 
        <div class="container">
            <div class="row justify-content-center mb-2 xs-mb-20px">
                <div class="col-md-12 col-sm-10 text-center">
                    <a href="#">
                        <img src="/images/izi-services-logo.svg" width="130px" alt="">
                    </a>
                </div>
            </div>
            <div class="row justify-content-center ">
                <ul class="col-md-12 mt-5 col-sm-10 text-center d-flex justify-content-center text-uppercase gap-3 flex-column flex-sm-row">
                    <li class="nav-item"><a href={getRelativeLocaleUrl(currentLocale ?? '', '')} class="nav-link">{t('nav.index')}</a></li>
                    <li class="nav-item"><a href={getRelativeLocaleUrl(currentLocale ?? '', 'about')} class="nav-link">{t('nav.about')}</a></li>
                    <li class="nav-item"><a href={getRelativeLocaleUrl(currentLocale ?? '', 'services')} class="nav-link">{t('nav.services')}</a></li>
                    <!-- <li class="nav-item"><a href={getRelativeLocaleUrl(currentLocale ?? '', 'faqs')} class="nav-link">{t('nav.faqs')}</a></li> -->
